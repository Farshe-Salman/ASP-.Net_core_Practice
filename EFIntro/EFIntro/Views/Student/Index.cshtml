
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>

}


@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Department</td>
                <td>
                <a class="btn btn-secondary" href="/Student/Details/@item.ID">Details</a>
                <a class="btn btn-primary" href="/Student/Update/@item.ID">Update</a>
                <a class="btn btn-danger" href="/Student/Delete/@item.ID">Delete</a>  </td>
            </tr>
        }
    </table>
}


